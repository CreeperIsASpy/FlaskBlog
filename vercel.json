{
  "version": 2,
  "builds": [
    {
      "src": "requirements.txt",
      "use": "@vercel/static-build",
      "config": {
        "command": "pip install -r requirements.txt && flask init-db"
      }
    },
    {
      "src": "index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ]
}